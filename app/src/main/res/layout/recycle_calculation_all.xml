<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:orientation="vertical"    android:layout_height="wrap_content">    <LinearLayout        android:background="@color/divide_color"        android:paddingRight="0.8dp"        android:paddingLeft="0.8dp"        android:orientation="vertical"        android:id="@+id/ll_calculate_detail"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:background="@color/bg_color"            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp">                <TextView                    android:id="@+id/tv_calculation_time"                    android:text="2012-12-12"                    android:layout_centerInParent="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp">                <TextView                    android:id="@+id/tv_value"                    android:text="约定利率:20%"                    android:layout_centerVertical="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp">                <TextView                    android:id="@+id/tv_days"                    android:text="计息天数:20%"                    android:layout_centerVertical="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="50dp">                <TextView                    android:id="@+id/tv_com"                    android:text="借贷利息(元):"                    android:layout_centerVertical="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />            </RelativeLayout>        </LinearLayout>    </LinearLayout></LinearLayout>