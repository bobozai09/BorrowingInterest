<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/activity_delay_interest"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/bg_color"    tools:context=".MainActivity">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:background="@color/colorPrimary">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="30dp"            android:layout_marginLeft="15dp"            android:textColor="@color/white"            android:text="借贷利息（元）"/>        <TextView            android:id="@+id/tv_interest_sum"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:layout_marginLeft="15dp"            android:layout_marginBottom="10dp"            android:textColor="@color/white"            android:textSize="24sp"            android:text="0.00"/>    </LinearLayout>    <ScrollView        android:layout_marginBottom="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_marginBottom="20dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:layout_marginTop="10dp"            android:background="@color/white">            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:paddingTop="10dp"                    android:paddingBottom="10dp"                    android:layout_marginLeft="10dp"                    android:text="本金金额（万元）"                    android:id="@+id/textView" />                <TextView                    android:id="@+id/tv_capital_sum_title"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:layout_centerVertical="true"                    android:gravity="right"                    android:layout_marginRight="10dp"                    android:maxLines="1"                    android:layout_alignParentRight="true"                    android:hint="万"                    />                <EditText                    android:id="@+id/et_capital_sum"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:textSize="14sp"                    android:gravity="right"                    android:inputType="number|numberDecimal"                    android:digits="1234567890."                    android:maxLines="1"                    android:layout_marginRight="5dp"                    android:background="@color/white"                    android:hint="请输入本金金额"                    android:layout_centerVertical="true"                    android:layout_toLeftOf="@+id/tv_capital_sum_title"                    />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:paddingTop="10dp"                    android:paddingBottom="10dp"                    android:layout_centerVertical="true"                    android:text="利率类型"/>                <LinearLayout                    android:id="@+id/lay_bank_base"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingTop="5dp"                    android:paddingBottom="5dp"                    android:layout_marginRight="10dp"                    android:orientation="horizontal"                    android:layout_alignParentRight="true">                    <ImageView                        android:id="@+id/im_bank_base"                        android:layout_width="25dp"                        android:layout_height="25dp"                        android:background="@drawable/unselect"/>                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:text="银行基准"                        android:layout_gravity="center_vertical"                        />                </LinearLayout>                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_toLeftOf="@+id/lay_bank_base"                    android:layout_marginRight="10dp"                    android:paddingTop="5dp"                    android:paddingBottom="5dp"                    android:orientation="horizontal">                    <ImageView                        android:id="@+id/im_appoint"                        android:layout_width="25dp"                        android:layout_height="25dp"                        android:background="@drawable/selected"/>                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:text="约定"                        android:layout_gravity="center_vertical"                        />                </LinearLayout>            </RelativeLayout>            <RelativeLayout                android:id="@+id/lay_loan_time"                android:visibility="gone"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <View                    android:layout_width="match_parent"                    android:layout_height="1sp"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:background="@color/divide_color" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:paddingBottom="10dp"                    android:paddingTop="10dp"                    android:text="贷款期限选择" />                <TextView                    android:layout_centerVertical="true"                    android:id="@+id/tv_loan_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:layout_alignParentEnd="true"                    android:gravity="right"                    android:paddingRight="25dp"                    android:text="选择日期后自动匹配" />                <Spinner                    android:visibility="gone"                    android:id="@+id/sp_loan_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentRight="true"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:gravity="right"                    android:paddingRight="25dp"                    android:textSize="14sp" />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:layout_alignParentTop="true"                    android:text="起算日期"/>                <ImageView                    android:layout_width="20dp"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:layout_alignParentRight="true"                    android:src="@drawable/right_arrow" />                <TextView                    android:paddingBottom="10dp"                    android:paddingTop="10dp"                    android:paddingRight="25dp"                    android:id="@+id/tv_data_begin"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:gravity="right"                    android:hint="点击选择起算日期"                    android:layout_alignParentTop="true"                    android:layout_alignParentRight="true"                    android:layout_alignParentEnd="true" />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@color/divide_color"/>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="截止日期"/>                <ImageView                    android:layout_width="20dp"                    android:layout_height="30dp"                    android:layout_centerVertical="true"                    android:layout_alignParentRight="true"                    android:src="@drawable/right_arrow" />                <TextView                    android:paddingBottom="10dp"                    android:paddingTop="10dp"                    android:paddingRight="25dp"                    android:id="@+id/tv_data_end"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:gravity="right"                    android:layout_alignParentRight="true"                    android:hint="点击选择截止日期"                    />            </RelativeLayout>            <RelativeLayout                android:id="@+id/lay_loan_rate_appoint"                android:layout_width="match_parent"                android:layout_height="wrap_content"                >                <View                    android:layout_width="match_parent"                    android:layout_height="1sp"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:layout_alignParentTop="true"                    android:background="@color/divide_color"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:paddingTop="10dp"                    android:paddingBottom="10dp"                    android:layout_marginLeft="10dp"                    android:text="约定借贷利率（年）"/>                <TextView                    android:id="@+id/tv_loan_rate_appoint_title"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:layout_centerVertical="true"                    android:gravity="right"                    android:layout_marginRight="10dp"                    android:maxLines="1"                    android:layout_alignParentRight="true"                    android:hint="%"                    />                <EditText                    android:id="@+id/et_loan_rate"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:background="@color/white"                    android:layout_centerVertical="true"                    android:textSize="14sp"                    android:gravity="right"                    android:layout_marginRight="5dp"                    android:inputType="number|numberDecimal"                    android:digits="1234567890."                    android:maxLines="1"                    android:layout_toLeftOf="@+id/tv_loan_rate_appoint_title"                    android:hint="请输入利率"                    />            </RelativeLayout>            <RelativeLayout                android:visibility="gone"                android:id="@+id/lay_loan_rate_bank"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <View                    android:layout_width="match_parent"                    android:layout_height="1sp"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:layout_alignParentTop="true"                    android:background="@color/divide_color"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingBottom="10dp"                    android:paddingTop="10dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="银行基准贷款利率（年）"/>                <TextView                    android:id="@+id/tv_loan_rate_title"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:layout_centerVertical="true"                    android:gravity="right"                    android:layout_marginRight="10dp"                    android:maxLines="1"                    android:layout_alignParentRight="true"                    android:hint="%"                    />                <TextView                    android:id="@+id/tv_loan_rate"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="14sp"                    android:layout_centerVertical="true"                    android:gravity="right"                    android:layout_marginRight="5dp"                    android:maxLines="1"                    android:layout_toLeftOf="@+id/tv_loan_rate_title"                    android:hint="0"                    />            </RelativeLayout>            <RelativeLayout                android:visibility="gone"                android:id="@+id/lay_loan_rate_multiple"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <View                    android:layout_width="match_parent"                    android:layout_height="1sp"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:layout_alignParentTop="true"                    android:background="@color/divide_color"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingTop="10dp"                    android:paddingBottom="10dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="10dp"                    android:text="利率倍数"/>                <Spinner                    android:paddingRight="25dp"                    android:id="@+id/sp_loan_rate_multiple"                    android:layout_width="40dp"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginRight="10dp"                    android:textSize="14sp"                    android:gravity="right"                    android:layout_alignParentRight="true"                    />            </RelativeLayout>            <View                android:layout_width="match_parent"                android:layout_height="1sp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@color/divide_color"/>            <TextView                android:id="@+id/tv_account"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/blue"                android:layout_marginBottom="10dp"                android:layout_marginTop="10dp"                android:layout_gravity="center_horizontal"                android:text="计算"                android:textColor="@color/white"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:paddingLeft="30dp"                android:paddingRight="30dp"/>            <LinearLayout                android:layout_marginBottom="10dp"                android:visibility="gone"                android:layout_marginLeft="20dp"                android:background="@color/divide_color"                android:paddingRight="0.8dp"                android:paddingLeft="0.8dp"                android:layout_marginRight="20dp"                android:orientation="vertical"                android:id="@+id/ll_calculate_detail"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <LinearLayout                    android:background="@color/bg_color"                    android:orientation="vertical"                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <View                        android:layout_width="match_parent"                        android:layout_height="1sp"                        android:background="@color/divide_color"/>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="50dp">                        <TextView                            android:text="计算明细"                            android:layout_centerInParent="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1sp"                        android:background="@color/divide_color"/>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="50dp">                        <TextView                            android:id="@+id/tv_value"                            android:text="约定利率:20%"                            android:layout_centerVertical="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1sp"                        android:background="@color/divide_color"/>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="50dp">                        <TextView                            android:id="@+id/tv_days"                            android:text="计息天数:20%"                            android:layout_centerVertical="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1sp"                        android:background="@color/divide_color"/>                    <RelativeLayout                        android:layout_width="match_parent"                        android:layout_height="50dp">                        <TextView                            android:id="@+id/tv_com"                            android:text="借贷利息(元):"                            android:layout_centerVertical="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                    <View                        android:layout_width="match_parent"                        android:layout_height="1sp"                        android:background="@color/divide_color"/>                </LinearLayout>            </LinearLayout>            <LinearLayout                android:layout_margin="20dp"                android:visibility="gone"                android:orientation="vertical"                android:id="@+id/rlt_calculation_all"                android:layout_width="match_parent"                android:layout_height="match_parent">                <RelativeLayout                    android:paddingTop="1dp"                    android:paddingLeft="1dp"                    android:paddingRight="1dp"                    android:background="@color/divide_color"                    android:layout_width="match_parent"                    android:layout_height="50dp">                    <RelativeLayout                        android:background="@color/bg_color"                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <TextView                            android:text="计算明细"                            android:layout_centerInParent="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                </RelativeLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                    <android.support.v7.widget.RecyclerView                        android:id="@+id/rv_calculation_all"                        android:layout_width="match_parent"                        android:layout_height="wrap_content">                    </android.support.v7.widget.RecyclerView>                </RelativeLayout>                <RelativeLayout                    android:padding="1dp"                    android:background="@color/divide_color"                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                    <RelativeLayout                        android:minHeight="50dp"                        android:background="@color/bg_color"                        android:layout_width="match_parent"                        android:layout_height="match_parent">                        <TextView                            android:id="@+id/tv_total"                            android:text="合计:"                            android:layout_centerVertical="true"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content" />                    </RelativeLayout>                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </ScrollView></LinearLayout>